# Server Configuration
PORT=5000

# MongoDB Atlas Connection String
# Replace with your own MongoDB Atlas URI
MONGO_URI=mongodb+srv://<username>:<password>@<cluster-name>.mongodb.net/secure-profile

# JWT Secret Key (used for signing auth tokens)
JWT_SECRET=your_jwt_secret_key_here

# AES-256 Encryption Key (must be EXACTLY 32 characters)
AES_SECRET_KEY=your_32_character_encryption_key
